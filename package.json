{
  "name": "keyboard-pet",
  "version": "1.0.0",
  "description": "Keyboard Desktop Pet",
  "author": "keyboard-pet",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "postinstall": "npx @electron/rebuild",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.keyboard-pet.app",
    "productName": "KeyboardPet",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "KeyboardPet"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "renderer.js",
      "character-canvas.js",
      "node_modules/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "icon.png"
    ]
  },
  "dependencies": {
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
